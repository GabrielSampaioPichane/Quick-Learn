<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CaculumFragments.PorenciaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/shape_container_components"

        android:orientation="vertical"

        android:padding="20sp"

        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                android:padding="10dp"

                >

                <TextView
                    android:id="@+id/text_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/potencializa_o_e_radia_o_e_suas_propriedades"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"

                    android:gravity="center"

                    />

                <TextView

                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="POTENCIAÇÃO:"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"

                    android:padding="10sp"

                    />

                <TextView
                    android:id="@+id/text_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"

                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"


                    android:padding="10sp"
                    android:gravity="center"
                    android:text="RADICIAÇÃO E SUAS PROPRIEDADES"

                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Radiciação é a operação matemática inversa à potenciação. Enquanto a potenciação é uma multiplicação na qual todos os fatores são iguais, a radiciação procura descobrir que fatores são esses, dando o resultado dessa multiplicação."

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Exemplos:"

                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"

                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Dada a potência: 42 = 4·4 = 16"

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Dizemos que a raiz quadrada (raiz com índice 2) de 16 é igual a 4."

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Dada a potência: 26 = 64"

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Dizemos que a raiz sexta de 64 é igual a 2. Note que, ao dizer raiz sexta, estamos deixando claro que procuramos um número que foi multiplicado por ele mesmo 6 vezes e cujo resultado dessa multiplicação é igual a 64."

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="A notação usada para as raízes é a seguinte:"

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp"
                    android:gravity="center"

                    />


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:src="@drawable/asdasdasda"

                    android:padding="10sp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="No exemplo anterior, 64 é o radicando, 6 é o índice e 2 é a raiz sexta de 64 e resultado da raiz."

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Observação: Se a for um número real negativo e n for um número natural par, então não existe solução para essa raiz no conjunto dos números reais."

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:gravity="center"

                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="PROPRIEDADES DA RADIAÇÃO"

                    android:textStyle="bold"
                    android:textColor="@color/white"

                    android:textSize="22sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"

                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="1 – A raiz enésima de um número elevado a n é igual a esse mesmo número:"

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    />
                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:src="@drawable/exemplo_1"
                    android:padding="10sp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="2 – Índice e expoente do radicando podem ser multiplicados ou divididos pelo mesmo número. Assim, dados os números reais a, m, n e p, teremos:"

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    />
                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:src="@drawable/exemplo_2"
                    android:padding="10sp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="3 – Para simplificar a raiz de uma raiz, basta multiplicar seus índices. Matematicamente, isso pode ser representado da seguinte forma:"

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    />
                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:src="@drawable/exemplo_3"
                    android:padding="10sp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="4 – A raiz enésima do produto é igual ao produto das raízes enésimas:"

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    />
                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:src="@drawable/exemplo_4"
                    android:padding="10sp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="5 – A raiz enésima da razão é igual à razão das raízes enésimas, ou seja:"

                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    />
                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:src="@drawable/exemplo_5"
                    android:padding="10sp"
                    />
                <androidx.cardview.widget.CardView

                     android:id="@+id/bt_videoPotenciaeRad"

                     android:layout_width="match_parent"
                     android:layout_height="120dp"

                     android:background="@drawable/shape_container_components"

                     app:cardCornerRadius="20dp"
                     app:cardElevation="0dp"

                     android:layout_marginTop="15dp"
                     android:padding="10dp"

                     >

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"

                         android:text="VIDEO AULAS"
                         android:textColor="@color/lime"
                         android:textStyle="bold"
                         android:textSize="34sp"

                         android:gravity="center"

                         android:padding="20dp"

                        android:layout_marginTop="18dp"

                         />

                 </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>